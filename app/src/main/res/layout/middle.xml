<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView android:layout_width="wrap_content"
               android:src="@drawable/ic_queue"
               android:layout_height="wrap_content" android:id="@+id/imageView2"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="8dp" android:layout_marginTop="8dp"
               app:layout_constraintTop_toTopOf="parent"/>
    <ImageView android:layout_width="wrap_content"
               android:src="@drawable/ic_favorite"
               android:layout_height="wrap_content" android:id="@+id/imageView"
               app:layout_constraintStart_toEndOf="@+id/imageView2" app:layout_constraintHorizontal_bias="0.5"
               app:layout_constraintEnd_toStartOf="@+id/imageView3" android:layout_marginTop="8dp"
               app:layout_constraintTop_toTopOf="parent"/>
    <ImageView android:layout_width="wrap_content"
               android:src="@drawable/ic_add"
               android:layout_height="wrap_content" android:id="@+id/imageView3"
               app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
               app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>